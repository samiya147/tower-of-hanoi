import javax.swing.*;
import java.lang.*;
import java.awt.Button;
import java.awt.Color;
import java.awt.FlowLayout;
import javax.swing.border.*;
import java.awt.event.*;

class myframe1 extends JFrame implements ActionListener 
{
    int value;
    JLabel nofdisc;
    JTextField number;
    JButton ok;
    JPanel p;
    JLabel name;
    JTextField nametext;

    myframe1() {
        nofdisc = new JLabel(" no of disc ");
        number = new JTextField(20);
        name=new JLabel("Enter name-");
        nametext=new JTextField(20);
        ok = new JButton("enter");
        ok.setBackground(Color.black);
        ok.setForeground(Color.white);
        p = new JPanel();
        p.add(name);
        p.add(nametext);

        p.add(nofdisc);
        p.add(number);
        p.add(ok);
        setLayout(new FlowLayout());
        getRootPane().setDefaultButton(ok);
        Border br = BorderFactory.createTitledBorder(BorderFactory.createLineBorder(Color.RED, 2), " DISC");
        p.setBorder(br);
        add(p);

        // Action listener for pressing Enter in text field
        number.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                try {
                    int value = Integer.parseInt(number.getText());
                    String playerName=nametext.getText();
                    if(playerName.isEmpty()) 
                    {
                        JOptionPane.showMessageDialog(null, "Please enter your name!");
                        return;
                    }

                    Automatictoh tohPanel = new Automatictoh(value,playerName); // connect Automatictoh
                    JFrame f = new JFrame("Tower of Hanoi - " + value + " Discs");
                    f.add(tohPanel);
                    f.setSize(600, 400);
                    f.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
                    f.setVisible(true);
                } catch (NumberFormatException ex) {
                    JOptionPane.showMessageDialog(null, "Enter a valid integer!");
                }
            }
        });

        // Action listener for OK button
        ok.addActionListener(this);
    }

    public void actionPerformed(ActionEvent ae) {
        try {
            value = Integer.parseInt(number.getText());
            Automatictoh tohPanel = new Automatictoh(value); // connect Automatictoh
            JFrame f = new JFrame("Tower of Hanoi - " + value + " Discs");
            f.add(tohPanel);
            f.setSize(600, 400);
            f.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
            f.setVisible(true);
        } catch (NumberFormatException ex) {
            JOptionPane.showMessageDialog(this, "Enter a valid integer!");
        }
    }
}

// Main class to run the program
public class toerofhanoi {
    public static void main(String[] args) {
        myframe1 fl = new myframe1();
        fl.setTitle("Tower of hanoi");
        fl.setSize(400, 400);
        fl.setVisible(true);
        fl.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        ImageIcon image = new ImageIcon("C:\\Samiya_OldLaptop\\Downloads\\logo.jpg");
        fl.setIconImage(image.getImage());
        
    }
}

